<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.home.scope.qi.MainActivity">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="textPersonName"
            android:hint="A dish name (required)"
            android:ems="10"
            android:id="@+id/edDishName"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp" app:layout_constraintEnd_toEndOf="parent"/>

    <Button
            android:text="ShowDishName"
            android:layout_width="182dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnDishName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="114dp" android:layout_marginTop="21dp"
            app:layout_constraintTop_toBottomOf="@+id/edDishName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="115dp"/>


    <Button
            android:text="ShowIngredients"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btnShowIngredients"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="364dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="146dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="128dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="33dp" app:layout_constraintTop_toBottomOf="@+id/tvDishName"/>
    <TextView
            android:text="Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvDishName" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="176dp" android:layout_marginTop="68dp"
            app:layout_constraintTop_toBottomOf="@+id/btnDishName" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="176dp" app:layout_constraintHorizontal_bias="0.483"/>

</android.support.constraint.ConstraintLayout>